<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Pherus" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:splashScreenTheme" tools:ignore="NewApi">@style/splashscreen</item>
    </style>

    <style name="splashscreen" parent="Theme.Pherus">
        <item name="android:windowSplashScreenBehavior" tools:ignore="NewApi">icon_preferred</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:ignore="NewApi">1000</item>
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">?android:windowBackground</item>
        <item name="android:windowSplashscreenContent" tools:targetApi="o">@drawable/logo</item>
    </style>
</resources>